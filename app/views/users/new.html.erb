<div class="page-header">
  <div class="jumbotron">
    <div class="row">
      <% unless @user.omniauth? %>
        <div class="center-block">
          <div class="col-xs-6 center-block">
            <%= image_tag('octocat.png', class: 'img-responsive') %>
            <%= link_to button_tag('Sign up via Github', class: "btn-auth btn-github"), '/auth/github' %>
            <%= image_tag('Twitter.png', class: 'img-responsive') %>
            <%= link_to button_tag('Sign up via Twitter', class: "btn-auth btn-twitter"), '/auth/twitter' %>
          </div>
        </div>
        <div class="col-xs-4 col-xs-offset-2">
          <h1>Signup</h1>
      <% else %>
        <div class="col-xs-10 col-xs-offset-2 center-block">
          <h1>Verify Details</h1>
      <% end %>
      <%= link_to root_path, class: 'btn btn-default' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Back
      <% end %>
      </div>

      <%= render 'users/form' %>
      <% link_to 'Back', root_path %>

      </div>
    </div>
  </div>
</div>
</div>
