<div class="page-header"></div>
<h3>
  Recent Workout News:
</h3>
<br>
<br>
<div class="row">
  <div class="col-md-8">
    <% @results.each do |result| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <p><%= link_to result.title, result.uri, target: "_blank" %></p>
          </h3>
        </div>
        <div class="panel-body">
          <p><%= simple_format result.content %> </p>
        </div>
      </div>
    <% end %>
  </div>
</div>


