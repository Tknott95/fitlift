<%= form_for(@workout, html: {class: 'form-horizontal', role: "form"}) do |f| %>
  <% if @workout.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this workout from being saved:</h4>

      <ul>
        <% @workout.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :date, class: "col-sm-2 control-label" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :workout, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :workout, class: "col-sm-2 control-label" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :motivation_level, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :motivation_level, class: "col-sm-2 control-label" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :length_lifting, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :length_lifting, class: "col-sm-2 control-label" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :length_hitting_cardio, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :length_hitting_cardio, class: "col-sm-2 control-label" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Post Workout', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
